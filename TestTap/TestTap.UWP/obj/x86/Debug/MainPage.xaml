<Page x:ConnectionId='1'
    x:Class="TestTap.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="using:TestTap.Shared.UserControls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TestTap"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ListViewItemTemplate1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}" />
                    <TextBlock Margin="0,0,10,0" Text="Click.-......." />
                </StackPanel>

                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <Button Margin="0,2,0,0" Command="{Binding UpdateCommand}">
                            <SymbolIcon Symbol="Add" />
                        </Button>
                        <Button Margin="0,2,0,0" Command="{Binding DeleteCommand}">
                            <SymbolIcon Symbol="Delete" />
                        </Button>
                    </StackPanel>
                </Grid>

            </Grid>

        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="50" />
            <RowDefinition Height="200" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />-->
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='3' x:Name="GridColumn0Ux" MaxWidth="600" />
            <ColumnDefinition x:ConnectionId='4'
                x:Name="GridColumn1Ux"
                Width="*"
                MaxWidth="600" />
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='5'
            Grid.Row="1"
            FontSize="30"
                                                             />
        <!--<ListView
            x:Name="ListUx"
            Grid.Row="1"
            ItemTemplate="{StaticResource ListViewItemTemplate1}"
            ItemsSource="{Binding TestList}" />-->
        <!--<Pivot x:Name="PivotUx" Grid.Row="2">
            <PivotItem Header="P1">
                <ListView
                    x:Name="ListPUx"
                    Grid.Row="1"
                    ItemTemplate="{StaticResource ListViewItemTemplate1}"
                    ItemsSource="{Binding TestList}" />
            </PivotItem>
        </Pivot>-->
        <Grid>
            <controls:TabView x:ConnectionId='7'
                x:Name="tabs"
                Grid.Row="0"
                CanCloseTabs="True"
                IsSwipeEnabled="True">
                <controls:TabViewItem x:ConnectionId='8' x:Name="t1" Header="t1">
                    <ListView x:ConnectionId='12'
                        x:Name="ListTUx"
                        ItemTemplate="{StaticResource ListViewItemTemplate1}"
                        ItemsSource="{Binding TestList}" />
                </controls:TabViewItem>
                <controls:TabViewItem x:ConnectionId='9' x:Name="t2" Header="t2">
                    <ListView x:ConnectionId='10'
                        x:Name="ListT2Ux"
                        ItemsSource="{Binding TestList, Mode=TwoWay}"
                                                             >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <UserControls:TestUserControl />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </controls:TabViewItem>
            </controls:TabView>
        </Grid>
        <Frame x:ConnectionId='6'
            Name="TaskAndSe"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5,0,5,0" />
    </Grid>
</Page>

